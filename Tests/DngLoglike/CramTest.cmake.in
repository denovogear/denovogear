# Test dng-loglike functioning with cram file
set(BasicTest-CMD @DNG_LOGLIKE_EXE@ --mu-somatic 1e-8 --mu-library 1e-8 -f sample-5.3_ref.fasta.gz -p ceu.ped test1.cram)
set(BasicTest-WD "@TESTDATA_DIR@/sample_5_3/")
